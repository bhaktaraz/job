{% extends '@Job/layout.html.twig' %}

{% block content %}
<h3>Categories</h3>

    <a href="{{ path('category_create') }}" class="btn btn-primary">Create New</a>

<table class="table">
<tr>
    <th>SN</th>
    <th>Name</th>
    <th>Enabled</th>
    <th>Action</th>
</tr>

{% for category in categories %}

    <tr>
        <td>{{ loop.index }}</td>
        <td>{{ category.name }}</td>
        <td>{{ category.enabled ? '<span class="label label-success">YES</span>' : '<span class="label label-danger">NO</span>' }}</td>
        <td><a href="{{ path('category_delete', {'id' : category.id}) }}" onclick="return confirm('Are you sure?');">Delete</a>
        <a href="{{ path('category_edit', {'id' : category.id}) }}">Edit</a></td>
    </tr>

{% endfor %}

</table>

{% endblock %}